<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/bg_top_header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/ic_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/rl_two_login"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_one_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KSU TG. PERAK"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="@+id/bg_top_header"
        tools:layout_editor_absoluteX="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp">

            <RelativeLayout
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_marginLeft="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:src="@drawable/ic_empty"
                    app:civ_border_color="@android:color/darker_gray"
                    app:civ_border_overlay="true"
                    app:civ_border_width="2dp" />

                <ProgressBar
                    android:id="@+id/pbLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_nama"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mo_re"
                    android:text="Nama"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/iv_photo"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/mo_re"
                    android:text="email@gmail.com"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/iv_photo"
                    app:layout_constraintTop_toTopOf="@id/tv_nama" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/cv_header"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permohonan Layanan"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/rv_ppmkk"
                android:background="?attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.25"
                android:clickable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:layout_above="@+id/tv_ppmk"
                    android:background="@drawable/ic_ppmkk"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    fontPath="fonts/Poppins-SemiBold.otf"
                    tools:ignore="MissingPrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="PPMKK"
                    android:textStyle="bold"
                    android:id="@+id/tv_ppmk"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_kes_kapal"
                android:background="?attr/selectableItemBackground"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.25"
                android:clickable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_above="@+id/tv_kapal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ic_kapal"
                    android:scaleType="center" />

                <TextView

                    fontPath="fonts/Poppins-SemiBold.otf"
                    tools:ignore="MissingPrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="Kes. Kapal"
                    android:textStyle="bold"
                    android:id="@+id/tv_kapal"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_ppk"
                android:background="?attr/selectableItemBackground"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.25"
                android:clickable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_above="@+id/tv_ppk"
                    android:layout_centerHorizontal="true"
                    android:scaleType="center"
                    android:background="@drawable/ic_ppk"
                    android:layout_marginBottom="5dp"
                    />

                <TextView

                    fontPath="fonts/Poppins-SemiBold.otf"
                    tools:ignore="MissingPrefix"
                    android:id="@+id/tv_ppk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:maxLines="1"
                    android:text="PPK"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_pelaut"
                android:background="?attr/selectableItemBackground"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.25"
                android:clickable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_above="@+id/tv_pelaut"
                    android:layout_centerHorizontal="true"
                    android:scaleType="center"
                    android:background="@drawable/ic_pelaut"
                    android:layout_marginBottom="5dp"
                    />

                <TextView

                    fontPath="fonts/Poppins-SemiBold.otf"
                    tools:ignore="MissingPrefix"
                    android:id="@+id/tv_pelaut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:maxLines="1"
                    android:text="Kepelautan"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/rv_stb"
                android:background="?attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.25"
                android:clickable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:layout_above="@+id/tv_stb"
                    android:background="@drawable/ic_stb"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    fontPath="fonts/Poppins-SemiBold.otf"
                    tools:ignore="MissingPrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="STB"
                    android:textStyle="bold"
                    android:id="@+id/tv_stb"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_p3"
                android:background="?attr/selectableItemBackground"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.25"
                android:clickable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_above="@+id/tv_p3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ic_p3"
                    android:scaleType="center" />

                <TextView

                    fontPath="fonts/Poppins-SemiBold.otf"
                    tools:ignore="MissingPrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="P3"
                    android:textStyle="bold"
                    android:id="@+id/tv_p3"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

