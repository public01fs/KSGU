<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="20dp"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Kode Verifikasi telah dikirim ke email anda "
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Kode Verifikasi"
            android:textColorHint="@color/black">

            <EditText
                android:id="@+id/etKode"
                android:drawableLeft="@drawable/ic_kode"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_corner"
                android:backgroundTint="@color/next"
                android:padding="@dimen/activity_horizontal_margin2"
                android:text="Kirim"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Tidak Menerima SMS?"
                android:textSize="18dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvResend"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:text="Resend SMS"
                android:textSize="18dp"
                android:gravity="center"/>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvTimer"
                android:textColor="@color/black"
                android:text=""
                android:textSize="18dp"
                android:gravity="center"/>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</LinearLayout>